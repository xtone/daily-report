# データベース設定
DB_HOST=db
DB_USERNAME=root
DB_PASSWORD=password
DB_PORT=3306

# MySQL設定
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_HOST=db
MYSQL_PORT=3306

# Rails設定
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Webpacker設定
NODE_ENV=development
WEBPACKER_DEV_SERVER_HOST=0.0.0.0

# 外部サービス設定（必要に応じて設定）
BUGSNAG_API_KEY=
BUGSNAG_ENV=development
SLACK_WEBHOOK_URL=

# Solid Queue設定（本番/ステージング用）
# Pumaプラグインとして実行する場合はtrueに設定
# SOLID_QUEUE_IN_PUMA=true
# キュー用データベース名（デフォルト: daily-report_production_queue）
# SOLID_QUEUE_DATABASE=daily-report_production_queue
# キュー名プレフィックス（ステージングと本番でDBを共有する場合に必須）
# 本番: QUEUE_NAME_PREFIX=production
# ステージング: QUEUE_NAME_PREFIX=staging
# QUEUE_NAME_PREFIX=production

# Solid Cable設定（本番/ステージング用）
# ケーブル用データベース名（デフォルト: daily-report_production_cable）
# SOLID_CABLE_DATABASE=daily-report_production_cable
# チャンネル名プレフィックス（ステージングと本番でDBを共有する場合に必須）
# 本番: CHANNEL_PREFIX=production
# ステージング: CHANNEL_PREFIX=staging
# CHANNEL_PREFIX=production

# データベースコネクションプール設定（本番/ステージング用）
# Solid Queue + Solid Cable + Pumaの構成では以下の計算式を参考に設定
# - primary: Pumaスレッド数 + Solid Queueワーカースレッド数
# - queue: Solid Queueワーカー(5×2=10) + Dispatcher + Scheduler + Puma
# - cable: ActionCable接続数 + バッファ
# DB_POOL_PRIMARY=15
# DB_POOL_QUEUE=20
# DB_POOL_CABLE=10

# ECSデプロイ設定
# マイグレーションをスキップする場合はtrueに設定（複数コンテナ環境でのマイグレーション競合回避用）
# SKIP_DB_MIGRATE=true

# その他の設定
BUNDLER_VERSION=2.4.22
BOOTSNAP_CACHE_DIR=/tmp/bootsnap-cache